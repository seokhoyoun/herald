{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "DateFolders": {
    "BasePath": "data",
    "CheckIntervalMinutes": 1
  },
  "MarkdownWatch": {
    "RootPath": "../../", 
    "IntervalMinutes": 1,
    "StoreContent": true,
    "MaxContentBytes": 262144
  },
  "HtmlOutput": {
    "BasePath": "out"
  },
  "MongoDb": {
    "ConnectionString": "mongodb://localhost:27018",
    "Database": "herald",
    "FilesCollection": "files",
    "EventsCollection": "events"
  }
}
